extends ../userLayout
block head
   title 映射关系显示
   link(type="text/css",rel='stylesheet',href='/stylesheets/ShowRoleMapping.css')
   script(type='text/javascript',charset='UTF-8',src='/js/ShowRoleMapping.js')
block content
   .container
      button.button-border-thick(style='margin-left: 10px;') 组织职位列表
      .container-left
         input(name="rolemapps",id="rolemapps", type="hidden" ,value='#{JSON.stringify(idMap)}')
         each pos in organPos
            .organPosItem.font(id="#{pos._id}" ,type="button") #{pos.posName} #{pos.depName} #{pos.roleName}
      button.button-border-thick(style='margin-left: 240px;') 业务角色列表
      .container-right
         each busiRole in busiRoles
            .busiRoleItem.font(id="#{busiRole._id}" ,type="button") #{busiRole.name}






